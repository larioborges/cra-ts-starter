{
  "name": "base-react-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.3",
    "react-scripts": "^5.0.1",
    "react-secure-storage": "^1.0.21",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.2.1",
    "reselect": "^4.1.7",
    "typescript": "^4.9.3",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "sync:localenv": "copyfiles --flat ./env/.env.local .",
    "prestart": "copyfiles --soft --flat ./env/.env.local .",
    "start": "env-cmd -f ./.env.local react-scripts start",
    "prebuild": "copyfiles --soft --flat \"./env/.env.local\" \"./\"",
    "build": "env-cmd -f ./.env.local react-scripts build",
    "start:qa": "env-cmd -f ./env/.env.qa react-scripts start",
    "build:qa": "env-cmd -f ./env/.env.qa react-scripts build",
    "start:prod": "env-cmd -f ./env/.env.prod react-scripts start",
    "build:prod": "env-cmd -f ./env/.env.prod react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint": "eslint --ext .js,.ts,.jsx,.tsx src",
    "stylelint": "stylelint src/**/*.{css,scss,less,sss}",
    "lint": "npm run eslint & npm run stylelint",
    "lint:fix": "npm run eslint --fix & npm run stylelint --write",
    "prettier:format": "npm prettier --write src/**/*.{js,jsx,ts,tsx,css,scss,less,sss}",
    "format": "npm run lint:fix & npm run prettier:format"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@redux-devtools/core": "^3.13.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "copyfiles": "^2.4.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "prettier": "^2.7.1",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0"
  }
}
